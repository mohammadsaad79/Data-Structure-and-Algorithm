#include<bits/stdc++.h>
using namespace std;

int minPathTriangle(vector<vector<int>>& triangle, int n) {
    vector<vector<int>> dp(n, vector<int> (n));
    dp[0][0] = triangle[0][0];
    for(int i = 1; i < n; i++) {
        for(int j = 0; j <= i; j++) {
            if(j == 0)
                dp[i][j] = triangle[i][j] + dp[i - 1][j];
            else if(j == i)
                dp[i][j] = triangle[i][j] + dp[i - 1][j - 1];
            else
                dp[i][j] = triangle[i][j] + min(dp[i - 1][j - 1], dp[i - 1][j]);
        }
    }
    return *min_element(dp[n - 1].begin(), dp[n - 1].end());
}

int main() {
    int n;
    cout << "Enter number of rows: ";
    cin >> n;
    vector<vector<int>> grid(n, vector<int>(n, 0));
    cout << "Enter grids value: ";
    for(int i = 0; i < n; i++) {
        for(int j = 0; j <= i; j++) {
            cin >> grid[i][j];
        }
    }
    cout << minPathTriangle(grid, n);
    return 0;
}
