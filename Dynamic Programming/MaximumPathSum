#include<bits/stdc++.h>
using namespace std;

int maximumPathSum(vector<vector<int>> &grid) {
    int m = grid.size();
    int n = grid[0].size();
    vector<vector<int>> dp(m, vector<int> (n, 0));
    for(int j = 0; j < n; j++)
        dp[0][j] = grid[0][j];
    for(int i = 1; i < m; i++) {
        for(int j = 0; j < n; j++) {
            int bestPath = dp[i - 1][j];
            if(j > 0) bestPath = max(bestPath, dp[i - 1][j - 1]); 
            if(j < n - 1) bestPath = max(bestPath, dp[i - 1][j + 1]);
            dp[i][j] = grid[i][j] + bestPath;
        }
    }
    return *max_element(dp[m - 1].begin(), dp[m - 1].end());
}

int main() {
    int m, n;
    cout << "Enter number of rows and columns: ";
    cin >> m >> n;
    vector<vector<int>> grid(m, vector<int>(n));
    cout << "Enter grids value: ";
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++) {
            cin >> grid[i][j];
        }
    }
    cout << maximumPathSum(grid);
    return 0;
}
